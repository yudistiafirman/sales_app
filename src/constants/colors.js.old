const main = {
  primary: '#E52525',
  secondary: '#FBC12C',
  disabled: '#D9D9D9',
  offWhite: '#F6F8FC',
  text: {
    dark: '#191919',
    light: '#FFFFFF',
  },
};

const light = {
  text: {
    dark: '#FFFFFF',
    hello: {
      test: 'test',
    }
  }
};
const dark = {};

///////////////////////////////////////////////

const combine = (a, b) => {
  const nA = { ...(a ?? {}) };
  const nB = { ...(b ?? {}) };
  for (let i in nB) {
    if (typeof nB[i] !== 'string') {
      nA[i] = combine(nA[i] ?? {}, nB[i]);
    } else {
      nA[i] = nB[i];
    }
  }
  return nA;
}

module.exports = {
  light: combine(main, light),
  dark: combine(main, dark),
};
