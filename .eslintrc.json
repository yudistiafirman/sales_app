{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    },
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "airbnb/hooks",
        "plugin:import/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json"
    },
    "plugins": ["simple-import-sort", "react"],
    "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "react/jsx-props-no-spreading": "off",
        "react-hooks/exhaustive-deps": "off",
        "react/no-unused-prop-types": "off",
        "no-promise-executor-return": "off", // priority 7
        "@typescript-eslint/no-var-requires": "off", // priority 6
        "react/no-array-index-key": "off", // priority 5
        "react/require-default-props": "off", // priority 4
        "no-nested-ternary": "off", // priority 3
        "react/destructuring-assignment": "off", // priority 2
        "class-methods-use-this": "off" // priority 1
    }
}
